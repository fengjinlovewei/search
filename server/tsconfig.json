{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["./origin", "./global.d.ts"],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
